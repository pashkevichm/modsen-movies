{
	"extends": "@tsconfig/react-native/tsconfig.json",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"types": ["@types/styled-components-react-native"],
		"paths": {
			"@interfaces/*": ["src/interfaces/*"],
			"@components/*": ["src/components/*"],
			"@hooks/*": ["src/hooks/*"],
			"@utils/*": ["src/utils/*"],
			"@types/*": ["src/types/*"],
			"@constants/*": ["src/constants/*"],
			"@screens/*": ["src/screens/*"],
			"@theme/*": ["src/theme/*"]
		}
	}
}
