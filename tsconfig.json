{
	"extends": "@tsconfig/react-native/tsconfig.json",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"types": ["@types/styled-components-react-native", "node"],
		"paths": {
			"@app/*": ["src/app/*"],
			"@features/*": ["src/features/*"],
			"@screens/*": ["src/screens/*"],
			"@shared/*": ["src/shared/*"],
			"@widgets/*": ["src/widgets/*"],
			"@entities/*": ["src/entities/*"]
		}
	}
}
